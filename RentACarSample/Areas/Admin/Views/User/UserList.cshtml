@using RentACarSample.Entities;
@model List<Member>

<partial name="_PageTitlePartial" model="@("Members")" />

<div class="row mb-3">
    <div class="col">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Username</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Member member in Model)
                {
                    <tr>
                        <td>@member.Id</td>
                        <td>@member.Username</td>
                        <td>
                            <a asp-action="ResetPassword" asp-route-id="@member.Id" class="btn btn-info btn-sm">Reset Password</a>
                            <a asp-action="ChangeRoles" asp-route-id="@member.Id" class="btn btn-danger btn-sm">Change Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>