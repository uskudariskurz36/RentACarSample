@using RentACarSample.Entities;
@model List<Member>

<div class="row mb-3">
    <div class="col">
        <h1 class="display-4">Members</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Username</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Member member in Model)
                {
                    <tr>
                        <td>@member.Id</td>
                        <td>@member.Username</td>
                        <td>
                            <a class="btn btn-info btn-sm">Edit</a>
                            <a class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>